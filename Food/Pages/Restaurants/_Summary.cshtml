@using Food.core
@model Restaurant

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-outline-info">Detail</a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-outline-info">Edit</a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-outline-info">Delete</a>
    </div>
</div>
